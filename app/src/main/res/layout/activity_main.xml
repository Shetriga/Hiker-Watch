<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hike"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/latitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/latitudeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/longitudeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/altitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/accuracyTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/altitudeTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Address:"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/firstAddressDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/addressTextView"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/secondAddressDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/firstAddressDetailTextView"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/thirdAddressDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/secondAddressDetailTextView"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/fourthAddressDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/thirdAddressDetailTextView"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="#fff"
        />

</RelativeLayout>